{
	"name": "vite-plugin-gas",
	"version": "0.0.3",
	"description": "A Vite plugin for Google Apps Script development with TypeScript support",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --build --watch",
		"clean": "node -e \"import('fs').then(fs => fs.rmSync('dist', {recursive: true, force: true}))\"",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"version:patch": "npm version patch",
		"version:minor": "npm version minor",
		"version:major": "npm version major",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"keywords": [
		"vite",
		"plugin",
		"google-apps-script",
		"gas",
		"typescript",
		"build-tool"
	],
	"author": "gather",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/11gather11/vite-plugin-gas.git"
	},
	"bugs": {
		"url": "https://github.com/11gather11/vite-plugin-gas/issues"
	},
	"homepage": "https://github.com/11gather11/vite-plugin-gas#readme",
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/node": "^24.1.0",
		"typescript": "5.9.2"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
	},
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"tinyglobby": "^0.2.14"
	}
}
