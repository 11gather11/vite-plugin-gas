{
	"name": "vite-plugin-gas",
	"version": "0.2.1",
	"description": "A Vite plugin for Google Apps Script development with TypeScript support",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"CHANGELOG.md",
		"LICENSE"
	],
	"scripts": {
		"build": "esno scripts/build.ts",
		"dev": "tsup --watch",
		"clean": "rimraf dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"type-check": "tsc --noEmit",
		"type-check:all": "tsc --noEmit -p tsconfig.test.json",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"version:patch": "npm version patch",
		"version:minor": "npm version minor",
		"version:major": "npm version major",
		"prepublishOnly": "npm run clean && npm run build && npm run type-check:all && npm run test",
		"prepare": "lefthook install",
		"hooks:install": "lefthook install",
		"hooks:uninstall": "lefthook uninstall"
	},
	"keywords": [
		"vite",
		"plugin",
		"google-apps-script",
		"gas",
		"typescript",
		"build-tool"
	],
	"author": "11gather11",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/11gather11/vite-plugin-gas.git"
	},
	"bugs": {
		"url": "https://github.com/11gather11/vite-plugin-gas/issues"
	},
	"homepage": "https://github.com/11gather11/vite-plugin-gas#readme",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@types/google-apps-script": "^1.0.99",
		"@types/node": "^24.1.0",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "^3.2.4",
		"esno": "^4.8.0",
		"lefthook": "^1.12.2",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"typescript": "5.9.2",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"vite": "^5.0.0 || ^6.0.0 || ^7.0.0"
	},
	"packageManager": "pnpm@10.14.0",
	"dependencies": {
		"tinyglobby": "^0.2.14"
	}
}
